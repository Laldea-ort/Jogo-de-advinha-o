                          const max = 100;
const min = 0;
var tentativas = 0;
var tentativasrestantes = 8;
let btnum = document.getElementById('envnum');
let btreset = document.getElementById('res');
btreset.addEventListener('click', reset);
btnum.addEventListener('click', envnumber);
var num = randomnumber(0, 100);
var inp = document.getElementById('textnum');
var text = document.getElementsByTagName('h2')[1];
var dif = localStorage.getItem('dificuldade') || 'facil'
var btdifs = document.getElementsByClassName('btdificuldade')
var textdif  =document.getElementById('difatual')
btdifs[0].addEventListener('click', () => {
    dif = 'facil'
    changedif()
    updatetext()
})
btdifs[1].addEventListener('click', () => {
    dif = 'medio'
    changedif()
    updatetext()
})
btdifs[2].addEventListener('click', () => {
    dif = 'dificil'
    changedif()
    updatetext()
})
btdifs[3].addEventListener('click', () => {
    dif = 'extremo'
    changedif()
    updatetext()
})

inp.addEventListener('keydown', function(event) {
    // Verifica se a tecla pressionada é Enter
    if (event.key === 'Enter') {
        envnumber();
        event.preventDefault();
    }
});

function randomnumber(min, max) {
    min = Math.ceil(min);
    max = Math.floor(max);
    return Math.floor(Math.random() * (max - min) + min);
}

function envnumber() {
    let inputValue = Number(inp.value);  // Converta para número

    if (inp.value.trim() != '') {
        if (inputValue === num) {
            tentativas++;
            text.innerText = `Acertou! O número era ${num}! Tentativas: ${tentativas}`;
            inp.value = '';
        } else {
            if (tentativas < 7 && inp.value <= 100) {
                tentativas++;
                tentativasrestantes--;
                let dica = inputValue < num ? 'maior' : 'menor';
                text.innerText = `Errou! O número sorteado é ${dica}. Tentativas restantes: ${tentativasrestantes}`;
                inp.value = '';
            } else {
                if(inp.value > 100)
                {
                    alert('O número deve ser menor que 100!')
                    inp.value = ''
                }else{
                    text.innerText = `Acabaram as tentativas! O número era ${num}`;}
                    btnum.disabled = 'disabled'
            }
        }
    } else {
        alert('Por favor insira um número!');
    }
}

function reset() {
    location.reload(true);
}
function changedif(){
    switch(dif){
        case 'facil':
            localStorage.setItem('dificuldade', 'facil')
            break
        case 'medio':
                localStorage.setItem('dificuldade', 'medio')
                break
        case 'dificil':
            localStorage.setItem('dificuldade', 'dificil')
            break
        case 'extremo':
                localStorage.setItem('dificuldade', 'extremo')
                break
    }
}
function updatetext(){
    textdif.innerText = localStorage.getItem('dificuldade') || 'facil'
}
changedif()
updatetext()
